<div class="filter" data-filter-wrapper>

	<div class="filter_select-checkbox-wrapper">

		<p class="filter_label">У какого класса выпускной</p>
		{% for label,filter_item in filters %}
			{% if filter_item.type == 'select' %}
				{% if label == 'grade' %}
					{{ this.render('filter_checkbox.twig', {
						'filter_item':filter_item,
						'label':label,
						'filter_active': filter_active,
					}) | raw }}
				{% else %}
					{{ this.render('filter_select.twig', {
						'filter_item':filter_item,
						'label':label,
						'filter_active': filter_active,
						'subdomen_filter_active': subdomen_filter_active[label]
					}) | raw }}
				{% endif %}
			{% elseif filter_item.type == 'input' %}
				{{ this.render('filter_input.twig', {
					'filter_item':filter_item,
					'label':label,
					'filter_active': filter_active
				}) | raw }}
			{% else %}
				{{ this.render('filter_checkbox.twig', {
					'filter_item':filter_item,
					'label':label,
					'filter_active': filter_active
				}) | raw }}
			{% endif %}
		{% endfor %}

	</div>

	<div class="filter_submit">
		<div class="filter_submit_button _button" data-filter-button>Показать {{total}} {{Declension.get(total, 'площ')}}</div>
	</div>
	<div class="filter_cancel">
		<div class="filter_cancel_button _link_blue" data-filter-cancel>Сбросить фильтр</div>
	</div>

</div>